<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D3B3A"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Activities.ReportActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel"
        android:text="DrOp Of HoPe"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mild_rounded_corners"
        android:backgroundTint="#8451A5"
        android:fontFamily="@font/cinzel_decorative"
        android:text="Report"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/mild_rounded_corners">

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/almendra_bold"
            android:gravity="top"
            android:hint="Report your issues here... you can also add a photo for better understanding"
            android:maxLines="10"
            android:minLines="6"
            android:padding="5dp"
            android:textAlignment="gravity"
            android:textColor="@android:color/white"
            android:textColorHint="@color/hint"
            android:textSize="20sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/display_image"
            android:layout_width="220dp"
            android:layout_height="240dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_photo_library_black_24dp"
            android:background="#8451A5" />

        <Button
            android:id="@+id/choose_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/mild_rounded_corners"
            android:backgroundTint="#CA5F19"
            android:text="Choose Image" />

    </LinearLayout>

    <Button
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="130dp"
        android:background="@drawable/mild_rounded_corners"
        android:backgroundTint="#CA5F19"
        android:text="Report"
        android:textSize="17sp"
        android:textStyle="bold" />

</LinearLayout>