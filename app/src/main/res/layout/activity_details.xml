<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474443"
    tools:context=".Activities.DetailsActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/default_user"
        tools:layout_editor_absoluteY="113dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/mild_rounded_corners"
            android:backgroundTint="#5D5B59">

            <ImageView
                android:id="@+id/person_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/person_icon"
                android:fontFamily="@font/cinzel"
                android:text="Yash Aniruddha Fulzele"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/mild_rounded_corners"
            android:backgroundTint="#5D5B59">

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_email_black_24dp" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/email_icon"
                android:fontFamily="serif"
                android:text="yashfulzele003@gmail.com"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/mild_rounded_corners"
            android:backgroundTint="#5D5B59">

            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_phone_black_24dp" />

            <TextView
                android:id="@+id/profile_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/phone_icon"
                android:fontFamily="@font/cinzel"
                android:text="8207029999"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/mild_rounded_corners"
            android:backgroundTint="#5D5B59">

            <ImageView
                android:id="@+id/message_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_message_black_24dp" />

            <TextView
                android:id="@+id/profile_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/message_icon"
                android:fontFamily="@font/cinzel"
                android:text="This is a demo message"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/mild_rounded_corners"
            android:backgroundTint="#5D5B59">

            <ImageView
                android:id="@+id/heart_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_favorite_black_24dp" />

            <TextView
                android:id="@+id/profile_blood_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/heart_icon"
                android:fontFamily="@font/cinzel"
                android:text="A+"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/get_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mild_rounded_corners"
        android:backgroundTint="@color/hint"
        android:elevation="222dp"
        android:text="Get Location" />
</RelativeLayout>