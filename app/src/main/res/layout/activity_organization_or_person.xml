<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrganizationOrPersonActivity"
    android:orientation="vertical"
    android:background="@drawable/org_person"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/almendra_bold"
        android:text="Who are you?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50sp" />
    <LinearLayout
        android:id="@+id/person"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:backgroundTint="#ffffff0"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/person"/>

        <TextView
            android:id="@+id/person_login"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="Individual Registration"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="24sp"
            android:fontFamily="@font/cinzel"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#ff9eef1"
        android:background="@drawable/rounded_corners">
        <ImageView
            android:id="@+id/organization_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/organization"/>
        <TextView
            android:id="@+id/organization_login"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="Organization Registration"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textSize="24sp"
            android:fontFamily="@font/cinzel"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>